import random

# List of possible words
word_list = ['python', 'hangman', 'challenge', 'programming', 'developer', 'keyboard']

# Randomly choose a word
word = random.choice(word_list).lower()
guessed_word = ['_'] * len(word)
guessed_letters = set()
max_attempts = 6
attempts = 0

print("ðŸŽ® Welcome to Hangman!")
print("Guess the word, one letter at a time.")
print(f"You have {max_attempts} incorrect guesses allowed.\n")

# Game loop
while attempts < max_attempts and '_' in guessed_word:
    print('Word:', ' '.join(guessed_word))
    guess = input("Enter a letter: ").lower()

    if len(guess) != 1 or not guess.isalpha():
        print("Please enter a single valid letter.\n")
        continue

    if guess in guessed_letters:
        print("You already guessed that letter.\n")
        continue

    guessed_letters.add(guess)

    if guess in word:
        print("âœ… Good guess!\n")
        for index, letter in enumerate(word):
            if letter == guess:
                guessed_word[index] = guess
    else:
        print("âŒ Wrong guess.\n")
        attempts += 1
        print(f"Incorrect guesses: {attempts}/{max_attempts}\n")

# Game result
if '_' not in guessed_word:
    print("ðŸŽ‰ Congratulations! You guessed the word:", word)
else:
    print("ðŸ˜¢ Game over! The word was:", word)
